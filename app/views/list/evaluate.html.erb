<%= render 'shared/it/it_nav' %>
<div class="container">
  <div class="row">
    <div class="col-lg-11">
      <%= bootstrap_flash %>
      <div class="row">
        <%= form_tag("/evaluates",method: "get") do %>
            <%= render 'shared/collect_method' %>
        <% end %>
      </div>
      <div style="height: 20px"></div>
      <div class="box span12">
        <div class="box-content">
          <% gongdan = @gongdans %>
          <%= link_to '<i class="icon-heart"></i> 满意度调查表Excel导出'.html_safe, evaluate_path(gongdan.to_a, format: "xlsx"),class:"btn btn-info" %>
        </div>
      </div>
      <div class="row-fluid sortable">
        <div class="box span12">
          <div class="box-content">
            <table class="table table-striped table-hover ">
              <thead>
              <tr>
                <th >工单编号</th>
                <th >工单主题</th>
                <th >建单人</th>
                <th >服务需求部门</th>
                <th >工单流转时间</th>
                <th >服务及时性</th>
                <th >服务质量</th>
                <th >服务态度</th>
                <th >意见建议</th>
              </tr>
              </thead>
              <tbody>
              <% @gongdans.each do |t| %>
                  <tr >
                    <td><%= t.number %></td>
                    <td><%= t.title %></td>
                    <td><%= t.creator %></td>
                    <td><%= t.department %></td>
                    <td><%= (t.finish_time.to_i-t.created_at.to_i)/60 %></td>
                    <td><%= t.e_timeliness %></td>
                    <td><%= t.e_quality %></td>
                    <td><%= t.e_attitude %></td>
                    <td><%= t.e_improvement %></td>
                  </tr>
              <% end %>
              </tbody>
            </table>
          </div>
          <!-- end: box-content -->
        </div>
        <!-- end: box span12 -->
      </div>
    </div>
  </div>
</div>