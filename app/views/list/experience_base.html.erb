<%= render 'shared/it/it_nav' %>
<div class="container">
  <div class="row">
    <div class="col-lg-11">
      <%= bootstrap_flash %>

      <div class="row-fluid sortable">
        <!-- start: box span12 -->
        <div class="box span12">

          <div class="alert alert-dismissible alert-info">
            <h4>注意!</h4>
            <p><i class="icon-bell"></i>&nbsp;&nbsp;经验库:以下任务工单为经典案例!</p>
          </div>
          <%= form_tag("/list/experience_base",method: "get") do %>
                <%= text_field_tag(:q) %>
                <%= submit_tag("搜索") %>
            <% end %>
          <!-- start: box-content -->
          <div class="box-content">
          <table  class="table table-striped table-hover ">
            <thead>
              <tr>
                <th >工单号</th>
                <th >主题</th>
                <th >服务需求部门</th>
                <th >紧急程度</th>
                <th >指派组别</th>
                <th>处理人</th>
                <th>建单时间</th>
                <th>归档时间</th>
                <th>查看工单</th>
          </tr>
            </thead>
            <tbody>
             <% @gongdans.each do |gongdan| %>
              <tr >
                <td >
                  <%= gongdan.number %>
                </td>
                <td >
                  <%= truncate(gongdan.title,length:10) %>
                </td>
                <td >
                  <%= gongdan.department %>
                </td>
                <td  >
                  <%= gongdan.emergent %>
                </td>
                <td >
                  <%= gongdan.appoint_department %>
                </td>
                <td>
                  <%= gongdan.appoint_worker %>
                </td>
                <td>
                  <%= gongdan.created_at.strftime('%m-%d(%H:%M)').to_s %>
                </td>
                <td>
                  <%= gongdan.updated_at.strftime('%m-%d(%H:%M)').to_s %>
                </td>
                <td>
                  <%= link_to '查看', experience_edit_path(gongdan),class:"btn btn-success",style: "color:white" %>
                </td>
              </tr>
             <% end %>
            </tbody>
        </table>
           <%= paginate @gongdans %>
      </div>
          <!-- end: box-content -->
    </div>
        <!-- end: box span12 -->
  </div>
      <!-- end: row-fluid sortable -->
    </div>
  </div>
</div>




