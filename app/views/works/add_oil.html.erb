
<%= render 'shared/manage_cars/mcnav' %>
<div style="height: 10px"></div>
<div class="container">
  <div class="row">
    <div class="col-lg-11">
      <%= bootstrap_flash %>
      <div class="alert alert-dismissable alert-danger">
        <strong><i class="icon-plus"></i> 新增加油明细!</strong>
      </div>
      <div style="height: 30px"></div>
      <%= simple_form_for @work,html: {class: "form-horizontal"} do |f| %>
          <%= f.error_notification %>
          <%= f.hidden_field :flag %>
         <% if current_user.area == "青海区" %>
          <div class="form-group ">
            <label for="inputName" class="col-lg-2 control-label">车牌号</label>
            <div class="col-lg-8">
              <%= f.select :car_number,"#{render 'shared/manage_cars/car_number'}".html_safe, {},  class: "form-control"  %>
            </div>
          </div>
        <% end %>
        <% if current_user.area == "成都区" %>
          <div class="form-group ">
            <label for="inputName" class="col-lg-2 control-label">车牌号</label>
            <div class="col-lg-8">
              <%= f.text_field :car_number, class: "form-control"  %>
            </div>
          </div>
        <% end %>
        <% if current_user.area == "西宁地区" %>
          <div class="form-group ">
           <label for="inputName" class="col-lg-2 control-label">车牌号</label>
           <div class="col-lg-8">
             <%= f.select :car_number,"#{render 'shared/manage_cars/car_namxn'}".html_safe, {},  class: "form-control"  %>
           </div>
         </div>
        <% end %>
        <% if current_user.area == "西宁配送" %>
            <div class="form-group ">
              <label for="inputName" class="col-lg-2 control-label">车牌号</label>
              <div class="col-lg-8">
                <%= f.select :car_number,"#{render 'shared/manage_cars/car_numxnps'}".html_safe, {},  class: "form-control"  %>
              </div>
           </div>
        <% end %>
        <% if current_user.area == "格尔木地区" %>
            <div class="form-group ">
              <label for="inputName" class="col-lg-2 control-label">车牌号</label>
              <div class="col-lg-8">
                <%= f.select :car_number,"#{render 'shared/manage_cars/car_numgem'}".html_safe, {},  class: "form-control"  %>
              </div>
            </div>
        <% end %>
        <% if current_user.area == "甘宁区" %>
            <div class="form-group ">
              <label for="inputName" class="col-lg-2 control-label">车牌号</label>
              <div class="col-lg-8">
                <%= f.select :car_number,"#{render 'shared/manage_cars/car_numgn'}".html_safe, {},  class: "form-control"  %>
              </div>
            </div>
        <% end %>
        <% if current_user.area == "广州区" %>
            <div class="form-group ">
              <label for="inputName" class="col-lg-2 control-label">车牌号</label>
              <div class="col-lg-8">
                <%= f.select :car_number,"#{render 'shared/manage_cars/car_numgz'}".html_safe, {},  class: "form-control"  %>
              </div>
            </div>
        <% end %>
        <% if current_user.area == "温州区" %>
            <div class="form-group ">
              <label for="inputName" class="col-lg-2 control-label">车牌号</label>
              <div class="col-lg-8">
                <%= f.select :car_number,"#{render 'shared/manage_cars/car_numwz'}".html_safe, {},  class: "form-control"  %>
              </div>
            </div>
        <% end %>
          <div class="form-group">
            <label for="inputName" class="col-lg-2 control-label">驾驶员</label>
          <div class="col-lg-8">
              <%= f.text_field :driver_name, class: "form-control", placeholder: "驾驶员姓名" %>
            </div>
          </div>
          <div class="form-group ">
            <label for="inputName" class="col-lg-2 control-label">油量</label>
            <div class="col-lg-8">
              <%= f.text_field :oils_amount, class: "form-control", placeholder: "公升" %>
            </div>
          </div>
          <div class="form-group">
            <label for="inputName" class="col-lg-2 control-label">所属区域</label>
            <div class="col-lg-8">
              <%= f.select :area, "#{render 'shared/pa/area'}".html_safe, {}, {class: "form-control"}%>
            </div>
          </div>
          <div class="form-group ">
            <label for="inputName" class="col-lg-2 control-label">加油时间</label>
            <div class="col-lg-8">
              <%= f.date_select :work_time, class: "form-control"%>
            </div>
          </div>
          <div style="height: 30px"></div>
          <div class="form-group">
            <div class="col-lg-3"></div>
            <div class="col-lg-2">
              <%= f.submit "提交", class: "btn btn-primary btn-block " %>
            </div>
            <div class="col-lg-2">
              <%= link_to '返回', oils_list_path ,class: "btn btn-default btn-block " %>
            </div>
          </div>
      <% end %>
    </div>
  </div><!--/row-->
</div> <!-- /container -->
