
    <%= simple_form_for @work,html: {class: "form-horizontal"} do |f| %>
        <%= f.error_notification %>
        <%= f.hidden_field :area %>
        <% if current_user.area == "青海区" %>
          <div class="form-group ">
            <label for="inputName" class="col-lg-2 control-label">车牌号</label>
            <div class="col-lg-8">
              <%= f.select :car_number,"#{render 'shared/manage_cars/car_number'}".html_safe, {},  class: "form-control"  %>
            </div>
          </div>
        <% end %>
        <% if current_user.area == "成都区" %>
          <div class="form-group ">
            <label for="inputName" class="col-lg-2 control-label">车牌号</label>
            <div class="col-lg-8">
              <%= f.text_field :car_number, class: "form-control"  %>
            </div>
          </div>
        <% end %>
        <% if current_user.area == "西宁地区" %>
          <div class="form-group ">
           <label for="inputName" class="col-lg-2 control-label">车牌号</label>
           <div class="col-lg-8">
             <%= f.select :car_number,"#{render 'shared/manage_cars/car_namxn'}".html_safe, {},  class: "form-control"  %>
           </div>
         </div>
        <% end %>
        <% if current_user.area == "西宁配送" %>
            <div class="form-group ">
              <label for="inputName" class="col-lg-2 control-label">车牌号</label>
              <div class="col-lg-8">
                <%= f.select :car_number,"#{render 'shared/manage_cars/car_numxnps'}".html_safe, {},  class: "form-control"  %>
              </div>
           </div>
        <% end %>
        <% if current_user.area == "格尔木地区" %>
            <div class="form-group ">
              <label for="inputName" class="col-lg-2 control-label">车牌号</label>
              <div class="col-lg-8">
                <%= f.select :car_number,"#{render 'shared/manage_cars/car_numgem'}".html_safe, {},  class: "form-control"  %>
              </div>
            </div>
        <% end %>
        <% if current_user.area == "甘宁区" %>
            <div class="form-group ">
              <label for="inputName" class="col-lg-2 control-label">车牌号</label>
              <div class="col-lg-8">
                <%= f.select :car_number,"#{render 'shared/manage_cars/car_numgn'}".html_safe, {},  class: "form-control"  %>
              </div>
            </div>
        <% end %>
        <% if current_user.area == "广州区" %>
            <div class="form-group ">
              <label for="inputName" class="col-lg-2 control-label">车牌号</label>
              <div class="col-lg-8">
                <%= f.select :car_number,"#{render 'shared/manage_cars/car_numgz'}".html_safe, {},  class: "form-control"  %>
              </div>
            </div>
            <div class="form-group">
              <label for="inputName" class="col-lg-2 control-label">服务需求部门</label>
              <div class="col-lg-8">
                <%= f.select :department,"#{render 'shared/manage_cars/gzdepartment'}".html_safe, {}, {class: "form-control"} %>
              </div>
            </div>
        <% end %>
        <% if current_user.area == "温州区" %>
            <div class="form-group ">
              <label for="inputName" class="col-lg-2 control-label">车牌号</label>
              <div class="col-lg-8">
                <%= f.select :car_number,"#{render 'shared/manage_cars/car_numwz'}".html_safe, {},  class: "form-control"  %>
              </div>
            </div>
            <div class="form-group">
              <label for="inputName" class="col-lg-2 control-label">服务需求部门</label>
              <div class="col-lg-8">
                <%= f.select :department,"#{render 'shared/manage_cars/wzdepartment'}".html_safe, {}, {class: "form-control"} %>
              </div>
            </div>
        <% end %>
        <% if current_user.area != "温州区" and current_user.area != "广州区"%>
          <div class="form-group">
            <label for="inputName" class="col-lg-2 control-label">服务需求部门</label>
            <div class="col-lg-8">
              <%= f.select :department,"#{render 'shared/manage_cars/department'}".html_safe, {}, {class: "form-control"} %>
            </div>
          </div>
        <% end %>
        <div class="form-group">
          <label for="inpu_tName" class="col-lg-2 control-label">驾驶员</label>
            <div class="col-lg-8">
              <%= f.text_field :driver_name, class: "form-control", placeholder: "起始地点" %>
            </div>
        </div>
        <div class="form-group">
          <label for="inputName" class="col-lg-2 control-label">起始地点</label>
          <div class="col-lg-8">
            <%= f.text_field :start_address, class: "form-control", placeholder: "起始地点" %>
          </div>
        </div>
        <div class="form-group">
          <label for="inputName" class="col-lg-2 control-label">终止地点</label>
          <div class="col-lg-8">
            <%= f.text_field :end_address, class: "form-control", placeholder: "终止地点" %>
          </div>
        </div>
        <div class="form-group">
          <label for="inputName" class="col-lg-2 control-label">起始公里数</label>
          <div class="col-lg-8">
            <%= f.text_field :start_k, class: "form-control", placeholder: "起始公里数" %>
          </div>
        </div>
        <div class="form-group">
          <label for="inputName" class="col-lg-2 control-label">终止公里数</label>
          <div class="col-lg-8">
            <%= f.text_field :end_k, class: "form-control", placeholder: "终止公里数" %>
          </div>
        </div>
        <div class="form-group">
          <label for="inputName" class="col-lg-2 control-label">过路费</label>
          <div class="col-lg-8">
            <%= f.text_field :tolls, class: "form-control", placeholder: "过路费" %>
          </div>
        </div>
        <div class="form-group">
          <label for="inputName" class="col-lg-2 control-label">停车费</label>
          <div class="col-lg-8">
            <%= f.text_field :parking_fees, class: "form-control", placeholder: "停车费" %>
          </div>
        </div>
       <% if current_user.area != "温州区" %>
        <div class="form-group">
        <label for="inpu_tName" class="col-lg-2 control-label">工作时间</label>
        <div class="col-lg-8">
          <%= f.date_select :work_time, class: "form-control"%>
        </div>
      </div>
    <% end %>
    <% if current_user.area == "温州区" %>
      <div class="form-group">
        <label class="col-lg-2 control-label">开始时间</label>
        <div class="col-lg-8">
          <%= f.datetime_select :s_time, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <label class="col-lg-2 control-label">结束时间</label>
        <div class="col-lg-8">
          <%= f.datetime_select :e_time, class: "form-control" %>
        </div>
      </div>
    <% end %> 


        <div class="form-group">
          <label for="inputName" class="col-lg-2 control-label">备注</label>
          <div class="col-lg-8">
            <%= f.text_field :remarks, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <label for="inputName" class="col-lg-2 control-label">加油量(公升)</label>
          <div class="col-lg-8">
            <%= f.text_field :oils_amount, class: "form-control", placeholder: "只填写数量" %>
            <span class="help-block">途中加油请填写加油量,若没有可不用填写!</span>
          </div>
        </div>
        <div style="height: 30px"></div>
        <div class="form-group">
          <div class="col-lg-4"></div>
          <div class="col-lg-2">
            <input class="btn btn-primary btn-block" type="submit" onclick="return validate();" value="提交" name="commit">
          </div>
          <div class="col-lg-2">
            <%= link_to '返回',  works_path ,class: "btn btn-default btn-block " %>
          </div>
        </div>
    <% end %>
    <script type="text/javascript">
        function validate() {
            if (work_start_k.value == '') {
                alert("起始公里数不能为空!");
                return false;
            } else if (work_end_k.value == '') {
                alert("终止公里数不能为空!");
                return false;
            } else if (work_tolls.value == '') {
                alert("过路费不能为空!");
                return false;
            } else if (work_parking_fees.value == '') {
                alert("停车费不能为空!");
                return false;
            } else if (work_oils_amount.value == '') {
                alert("加油量不能为空!");
                return false;
            }
            else{
                return true;
            };
        }
    </script>
