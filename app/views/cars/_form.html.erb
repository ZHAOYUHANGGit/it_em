
    <%= simple_form_for @car,html: {class: "form-horizontal"} do |f| %>
        <div class="form-group ">
          <label for="inputName" class="col-lg-2 control-label">车辆名称</label>
          <div class="col-lg-10">
            <%= f.text_field :name, class: "form-control", placeholder: "车辆名称" %>
          </div>
        </div>
        <div class="form-group">
          <label for="inputName" class="col-lg-2 control-label">车牌号码</label>
          <div class="col-lg-10">
            <%= f.text_field :number, class: "form-control", placeholder: "车辆名称" %>
          </div>
        </div>
        <div class="form-group">
          <label for="inputName" class="col-lg-2 control-label">驾驶员</label>
          <div class="col-lg-10">
            <%= f.text_field :driver_name, class: "form-control", placeholder: "驾驶员" %>
          </div>
        </div>
        <div class="form-group">
          <label for="inputName" class="col-lg-2 control-label">燃料</label>
          <div class="col-lg-10">
            <%= f.text_field :fuel, class: "form-control", placeholder: "燃料" %>
          </div>
        </div>
        <div class="form-group">
          <label for="inputName" class="col-lg-2 control-label">所属区域</label>
          <div class="col-lg-10">
            <%= f.text_field :area, class: "form-control", placeholder: "所属区域" %>
          </div>
        </div>
        <div class="form-group">
          <label for="inputName" class="col-lg-2 control-label">百公里油耗</label>
          <div class="col-lg-10">
            <%= f.text_field :oil_wear, class: "form-control",placeholder: "百公里油耗" %>
          </div>
        </div>
        <div class="form-group">
          <label for="inputName" class="col-lg-2 control-label">购买时间</label>
          <div class="col-lg-10">
            <%= f.text_field :buy_time, class: "form-control", placeholder: "车辆名称" %>
          </div>
        </div>
        <div class="form-group">
          <label for="inputName" class="col-lg-2 control-label">状态</label>
          <div class="col-lg-10">
            <%= f.text_field :state, class: "form-control", placeholder: "状态" %>
          </div>
        </div>
        <div style="height: 30px"></div>
        <div class="form-group">
          <div class="col-lg-5"></div>
          <div class="col-lg-2">
          <%= f.submit "提交", class: "btn btn-primary btn-block " %>
          </div>
          <div class="col-lg-2">
          <%= link_to '返回', cars_path ,class: "btn btn-default btn-block " %>
          </div>
        </div>
    <% end %>
