<%= render 'shared/manage_cars/mcnav' %>
<div class="container">
  <div class="row">
    <div class="col-lg-10">
      <%= bootstrap_flash %>
      <p id="notice"><%= notice %></p>
      <div class="alert alert-dismissable alert-info">
        <strong><i class="icon-bell"></i> 车辆明细!</strong>
      </div>
      <div class="form-group">
        <label class="col-lg-2 control-label text-info">车辆名称:</label>
        <label class="control-label"><strong><%= @car.name %></strong></label>
      </div>
      <div class="form-group">
        <label class="col-lg-2 control-label text-info">车牌号码:</label>
        <label class="control-label"><strong><%= @car.number %></strong></label>
      </div>
      <div class="form-group">
        <label class="col-lg-2 control-label text-info">驾驶员:</label>
        <label class="control-label"><strong><%= @car.driver_name %></strong></label>
      </div>
      <div class="form-group">
        <label class="col-lg-2 control-label text-info">燃料:</label>
        <label class="control-label"><strong><%= @car.fuel %></strong></label>
      </div>
      <div class="form-group">
        <label class="col-lg-2 control-label text-info">所属区域:</label>
        <label class="control-label"><strong><%= @car.area %></strong></label>
      </div>
      <div class="form-group">
        <label class="col-lg-2 control-label text-info">百公里油耗</label>
        <label class="control-label"><strong><%= @car.oil_wear %></strong></label>
      </div>
      <div class="form-group">
        <label class="col-lg-2 control-label text-info">状态:</label>
        <label class="control-label"><strong><%= @car.state %></strong></label>
      </div>
      <br/>
      <div class="form-group">
        <div class="col-lg-1"></div>
        <% if current_user.name == "关志军" %>
          <%= link_to '修改', edit_car_path(@car),class:"btn btn-warning " %>
        <% end %>
        <%= link_to '返回', cars_path,class:"btn btn-default " %>
      </div>

    </div>
  </div><!--/row-->
</div> <!-- /container -->



