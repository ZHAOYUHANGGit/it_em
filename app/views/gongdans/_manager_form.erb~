<script type="text/javascript">
    function validate() {
        if (gongdan_appoint_department.value == '' ) {
            alert("请选择处理组别!");
            return false;
        }else if(gongdan_appoint_worker.value == ''){
            alert("请选择处理人员!");
            return false;
        }else if(gongdan_appoint_worker_again.value == ''){
            alert("请选择处理人员!");
            return false;
        }else{
            return true;
        };
    }
</script>
